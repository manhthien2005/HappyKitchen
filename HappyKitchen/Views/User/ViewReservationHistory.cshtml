@model List<Reservation>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy Kitchen - Lịch Sử Đặt Bàn</title>
    <meta name="title" content="Happy Kitchen - Lịch Sử Đặt Bàn">
    <meta name="description" content="Xem lịch sử đặt bàn tại Happy Kitchen">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&family=Forum&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/User/Profile/profile.css">
    <link rel="stylesheet" href="~/css/User/Profile/header.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
</head>
<body>
    <div class="preload" data-preaload>
        <div class="circle"></div>
        <p class="text">HAPPY KITCHEN</p>
    </div>

    <!-- Top Bar -->
    <div class="topbar">
        <div class="container">
            <address class="topbar-item">
                <div class="icon">
                    <ion-icon name="location-outline" aria-hidden="true"></ion-icon>
                </div>
                <span class="span">Happy Kitchen, 01 Thảo Điền, Hồ Chí Minh, VN</span>
            </address>
            <div class="separator"></div>
            <div class="topbar-item item-2">
                <div class="icon">
                    <ion-icon name="time-outline" aria-hidden="true"></ion-icon>
                </div>
                <span class="span">Mở cửa : 8.00 AM - 10.00 PM</span>
            </div>
            <a href="tel:+11234567890" class="topbar-item link">
                <div class="icon">
                    <ion-icon name="call-outline" aria-hidden="true"></ion-icon>
                </div>
                <span class="span">+84 977139203</span>
            </a>
            <div class="separator"></div>
            <a href="mailto:booking@restaurant.com" class="topbar-item link">
                <div class="icon">
                    <ion-icon name="mail-outline" aria-hidden="true"></ion-icon>
                </div>
                <span class="span">happykitchenvn2025@gmail.com</span>
            </a>
        </div>
    </div>

    <!-- Header -->
    <header class="header" data-header>
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="~/images/logo.png" width="160" height="50" alt="Happy Kitchen - Home">
            </a>
            <nav class="navbar" data-navbar>
                <button class="close-btn" aria-label="close menu" data-nav-toggler>
                    <ion-icon name="close-outline" aria-hidden="true"></ion-icon>
                </button>
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="~/images/logo.svg" width="160" height="50" alt="Happy Kitchen - Home">
                </a>
                <ul class="navbar-list">
                    <li class="navbar-item"><a href="@Url.Action("Index", "Home")#home" class="navbar-link hover-underline active"><div class="separator"></div><span class="span">Trang Chủ</span></a></li>
                    <li class="navbar-item"><a href="@Url.Action("Index", "Home")#about" class="navbar-link hover-underline"><div class="separator"></div><span class="span">Giới Thiệu</span></a></li>
                    <li class="navbar-item"><a href="@Url.Action("Index", "Home")#menu" class="navbar-link hover-underline"><div class="separator"></div><span class="span">Thực Đơn</span></a></li>
                    <li class="navbar-item"><a href="@Url.Action("Index", "Home")#event" class="navbar-link hover-underline"><div class="separator"></div><span class="span">Sự Kiện & Mẹo Vặt</span></a></li>
                    <li class="navbar-item"><a href="@Url.Action("Index", "Home")#connect" class="navbar-link hover-underline"><div class="separator"></div><span class="span">Kết Nối</span></a></li>
                </ul>
            </nav>
            <a href="#booking" class="btn btn-secondary"><span class="text text-1">Đặt Bàn</span><span class="text text-2" aria-hidden="true">Đặt Bàn</span></a>
            <button class="nav-open-btn" aria-label="open menu" data-nav-toggler><span class="line line-1"></span><span class="line line-2"></span><span class="line line-3"></span></button>
            <div class="login-container">
                @if (Context.Session.GetString("Email") != null)
                {
                    <div id="userAvatar" class="user-avatar">
                        <img src="@Context.Session.GetString("Avatar")" class="avatar-img" alt="User" id="avatarDropdown">
                        <div class="dropdown-menu" id="userDropdown">
                            <div class="dropdown-arrow"></div>
                            <a class="dropdown-item" href="@Url.Action("Profile", "User")"><i class="bi bi-person"></i>Thông tin tài khoản</a>
                            <a class="dropdown-item" href="@Url.Action("ViewOrderHistory", "User")"><i class="bi bi-calendar"></i>Đơn đặt bàn</a>
                            <a class="dropdown-item" href="@Url.Action("ViewReservationHistory", "User")"><i class="bi bi-calendar"></i>Lịch sử đặt bàn</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item text-danger" href="@Url.Action("Logout", "User")"><i class="bi bi-box-arrow-right"></i>Đăng Xuất</a>
                        </div>
                    </div>
                }
                else
                {
                    <div id="loginButton" class="login-btn">
                        <a href="@Url.Action("Login", "User")" class="btn btn-outline-primary"><i class="bi bi-person"></i><span>Đăng Nhập</span></a>
                    </div>
                }
            </div>
            <button class="nav-open-btn" aria-label="open menu" data-nav-toggler><i class="bi bi-list"></i></button>
            <div class="overlay" data-nav-toggler data-overlay></div>
        </div>
    </header>

    <main>
        <section class="section">
            <div class="container">
                <div class="profile-wrapper">
                    @await Html.PartialAsync("/Views/Shared/User/ProfileSidebarPartial.cshtml")
                    <div class="profile-container">
                        <div class="profile-header">
                            <h1 class="headline-1">Lịch Sử Đặt Bàn</h1>
                        </div>
                        <div class="profile-content">
                            <div class="search-bar">
                                <input type="text" id="searchInput" placeholder="Tìm kiếm theo ID hoặc Ngày (dd/MM/yyyy)" class="search-input">
                            </div>
                            <div class="reservation-table">
                                <table id="reservationTable">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Ngày đặt</th>
                                            <th>Bàn</th>
                                            <th>Số người</th>
                                            <th>Đơn hàng</th>
                                            <th>Trạng Thái</th>
                                            <th>Hành Động</th>
                                        </tr>
                                    </thead>
                                    <tbody id="reservationTableBody">
                                        @foreach (var reservation in Model)
                                        {
                                            <tr data-reservation-id="@reservation.ReservationID">
                                                <td>#@reservation.ReservationID</td>
                                                <td>@reservation.ReservationTime.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>@(reservation.Table?.TableName ?? "N/A")</td>
                                                <td>@reservation.Capacity</td>
                                                <td>@(reservation.OrderID != null ? "#" + reservation.OrderID : "N/A")</td>
                                                <td class="status @(reservation.Status == 1 ? "pending" : reservation.Status == 2 ? "confirmed" : "canceled")">
                                                    @(reservation.Status == 0 ? "Đã hủy" : reservation.Status == 1 ? "Chờ xác nhận" : "Đã xác nhận")
                                                </td>
                                                <td>
                                                    <button class="btn btn-secondary btn-action view-reservation" data-reservation-id="@reservation.ReservationID" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    @if (reservation.OrderID != null)
                                                    {
                                                        <button class="btn btn-primary btn-action view-order" data-order-id="@reservation.OrderID" title="Xem đơn hàng liên quan">
                                                            <i class="fas fa-shopping-cart"></i>
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="pagination" id="pagination"></div>
                            @foreach (var reservation in Model)
                            {
                                <div class="modal" id="reservationModal-@reservation.ReservationID" style="display: none;">
                                    <div class="modal-content">
                                        <span class="close-modal" data-reservation-id="@reservation.ReservationID">×</span>
                                        <h2 class="modal-title">Chi Tiết Đặt Bàn #@reservation.ReservationID</h2>
                                        <div class="reservation-details">
                                            <p><strong>Khách hàng:</strong> @(reservation.CustomerName ?? "N/A")</p>
                                            <p><strong>Số điện thoại:</strong> @(reservation.CustomerPhone ?? "N/A")</p>
                                            <p><strong>Bàn:</strong> @(reservation.Table?.TableName ?? "N/A")</p>
                                            <p><strong>Thời gian đặt:</strong> @reservation.ReservationTime.ToString("dd/MM/yyyy HH:mm")</p>
                                            <p><strong>Thời lượng:</strong> @reservation.Duration phút</p>
                                            <p><strong>Số người:</strong> @reservation.Capacity</p>
                                            <p><strong>Trạng thái:</strong> @(reservation.Status == 0 ? "Đã hủy" : reservation.Status == 1 ? "Chờ xác nhận" : "Đã xác nhận")</p>
                                            <p><strong>Ghi chú:</strong> @(string.IsNullOrEmpty(reservation.Notes) ? "Không có" : reservation.Notes)</p>
                                            @if (reservation.OrderID != null)
                                            {
                                                <p><strong>Đơn hàng liên kết:</strong> #@reservation.OrderID</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script>
        $(document).ready(function() {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-bottom-right",
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
        });
    </script>
    <script src="~/js/User/Profile/reservationList.js"></script>
    <script src="~/js/User/Profile/header.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>