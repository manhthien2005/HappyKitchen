@{
    Layout = null;
}

@model string


<!DOCTYPE html>
<html>
<head>
    <title>Happy Kitchen - Xác Thực OTP</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="~/css/verifyOTP.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row px-3">
            <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
                <div class="img-left d-none d-md-flex"></div>

                <div class="card-body">
                    <h3 class="title text-center mt-4">
                        Xác Thực Tài Khoản
                    </h3>
                    <form method="post" class="form-box px-3" id="otpForm">
                        <input type="hidden" id="userEmail" value="@Model" />
                        <div style="display: flex; justify-content: center;">
                        <p>Email xác thực: <strong>@Model</strong></p>
                        </div>
                        <h4 style="display: flex; justify-content: center;">Nhập mã xác thực</h4>
                        <div class="otp-field">
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                            <input class="space" type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                            <input type="text" maxlength="1" />
                        </div>
                        <p id="otpError" style="color: red; text-align: center;"></p>
                        <div style="display:flex; justify-content: center; gap: 20px;">
                            <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("SignUp","Admin")'">Trở Lại</button>
                            <button type="button" id="resendOTP" class="btn btn-secondary">Gửi lại OTP</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <img src="~/images/shape-5.png" width="921" height="1036" loading="lazy" alt="shape"
             class="shape shape-1 move-anim">
        <img src="~/images/shape-2.png" width="343" height="345" loading="lazy" alt="shape"
             class="shape shape-2 move-anim">
        <img src="/images/shape-4.png" width="179" height="359" loading="lazy" alt="" class="shape shape-3 move-anim">
    </div>
    <script src="~/js/Admin/ForgotPass/otp_input.js"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

</body>
</html>