@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    var title = "Chỉnh sửa thông tin cá nhân";
}
@section Styles {
    <link rel="stylesheet" href="~/admin/css/user-profile.css">
}

<!-- Page Header -->
<div class="page-header">
    <h1>Chỉnh sửa thông tin cá nhân</h1>
    <p>Cập nhật thông tin tài khoản của bạn</p>
</div>

<!-- User Profile Content -->
<div class="user-profile-container">
    <div class="card">
        <div class="card-body">
            <form id="userProfileForm">
                <input type="hidden" id="userId" name="userId" value="0">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="fullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="fullName" name="fullName" maxlength="100" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="email" name="email" maxlength="100" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="address" class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" name="address" maxlength="255">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="password" class="form-label">Mật khẩu mới</label>
                        <input type="password" class="form-control" id="password" name="password" minlength="6">
                        <small class="form-text text-muted">Để trống nếu không muốn thay đổi mật khẩu.</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="6">
                    </div>
                </div>
                <div class="text-end">
                    <button type="button" class="btn btn-outline-secondary me-2" onclick="history.back()">Hủy</button>
                    <button type="button" class="btn btn-primary" id="saveProfileBtn">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/js/user-profile.js"></script>
}