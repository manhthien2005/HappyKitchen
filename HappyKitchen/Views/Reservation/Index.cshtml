@model VNPayRequest

<h2>Thanh toán qua VNPay</h2>

<form asp-action="CreatePayment" method="post">
    <div class="form-group">
        <label for="OrderId">Mã đơn hàng</label>
        <input asp-for="OrderId" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Amount">Số tiền (VND)</label>
        <input asp-for="Amount" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label for="OrderDescription">Mô tả</label>
        <input asp-for="OrderDescription" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Thanh toán</button>
</form>