<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @{
            var controller = ViewContext.RouteData.Values["controller"].ToString();
            switch (controller)
            {
                case "Dashboard":
                    <text>Happy Kitchen - Trang chủ</text>
                    break;
                case "ProductManage":
                    <text>Happy Kitchen - Quản lý sản phẩm</text>
                    break;
                case "Pos":
                    <text>Happy Kitchen - Hệ thống POS</text>
                    break;
                case "CustomerManage":
                    <text>Happy Kitchen - Quản lý khách hàng</text>
                    break;
                case "TableManage":
                    <text>Happy Kitchen - Quản lý bàn</text>
                    break;
                case "QRCodeManage":
                    <text>Happy Kitchen - Quản lý mã QR</text>
                    break;
                case "OrderManage":
                    <text>Happy Kitchen - Quản lý đơn hàng</text>
                    break;
                case "UserManage":
                    <text>Happy Kitchen - Cài đặt hệ thống</text>
                    break;
                default:
                    <text>@ViewData["Title"]</text>
                    break;
            }
        }
    </title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- General styles -->
    <link rel="stylesheet" href="~/admin/css/styles.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Mobile Overlay -->
    <div class="mobile-overlay"></div>
    
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo-container">
                <img src="~/admin/dashboard.png" class="logo-img">
                <div class="logo-text">
                    <h3>Quản lý nhà hàng</h3>
                </div>
            </div>
        </div>
        
        <!-- Sidebar content with scrolling -->
        <div class="sidebar-content">
            <ul class="sidebar-menu">
                <li><a href="/Dashboard" class="@(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")"><i class="fas fa-th-large"></i> <span class="menu-text">Trang chủ</span></a></li>
                <li><a href="/ProductManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "ProductManage" ? "active" : "")"><i class="fas fa-utensils"></i> <span class="menu-text">Quản lý sản phẩm</span></a></li>
                <li><a href="/Pos" class="@(ViewContext.RouteData.Values["controller"].ToString() == "Pos" ? "active" : "")"><i class="fas fa-shopping-cart"></i> <span class="menu-text">Hệ thống POS</span></a></li>
                <li><a href="/CustomerManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "CustomerManage" ? "active" : "")"><i class="fas fa-users"></i> <span class="menu-text">Khách hàng</span></a></li>
                <li><a href="/TableManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "TableManage" ? "active" : "")"><i class="fas fa-chair"></i> <span class="menu-text">Quản lý bàn</span></a></li>
                <li><a href="/OrderManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "OrderManage" ? "active" : "")"><i class="fas fa-clipboard-list"></i> <span class="menu-text">Quản lý đơn hàng</span></a></li>
                <li><a href="/QRCodeManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "QRCodeManage" ? "active" : "")"><i class="fas fa-qrcode"></i> <span class="menu-text">Mã QR</span></a></li>
                <li><a href="/UserManage" class="@(ViewContext.RouteData.Values["controller"].ToString() == "UserManage" ? "active" : "")"><i class="fas fa-user-cog"></i> <span class="menu-text">Cài đặt hệ thống</span></a></li>
            </ul>
            
        </div>
        
        <!-- User profile at bottom -->
        <div class="user-profile">
            <div class="user-avatar">@(Context.Session.GetString("StaffFullName")?.Substring(0, 1) ?? "U")</div>
            <div class="user-info">
                <p class="user-name">@(Context.Session.GetString("StaffFullName") ?? "Người dùng")</p>
                <p class="user-role">@(Context.Session.GetString("RoleName") ?? "Nhân viên")</p>
            </div>
            <a href="/admin/Logout" class="user-logout"><i class="fas fa-sign-out-alt" title="Nhấn để đăng xuất"></i></a>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="top-navbar">
            <div class="toggle-sidebar d-flex align-items-center">
                <i class="fas fa-bars"></i>
            </div>
        </div>
        
        @RenderBody()
        @* Content *@
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>

    <!-- Custom JavaScript -->
    <script src="~/admin/js/script.js"></script>
    <script src="~/admin/js/utils.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>